{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [{
      "name": "vmName",
      "type": "Microsoft.Common.TextBox",
      "label": "VM Name",
      "toolTip": "The name of the new VM.",
      "constraints": {
        "required": true,
        "regex": "^[a-z0-9]{3,24}$",
        "validationMessage": "VM names must be between 3 and 24 characters long, and can contain only numbers and lowercase letters."
      }
    }, {
      "name": "adminUsername",
      "type": "Microsoft.Compute.UserNameTextBox",
      "label": "Username",
      "toolTip": "Admin username for the virtual machines.",
      "osPlatform": "Linux"
    }, {
      "name": "adminPassword",
      "type": "Microsoft.Compute.CredentialsCombo",
      "label": {
        "password": "Password",
        "confirmPassword": "Confirm password"
      },
      "toolTip": {
        "password": "Admin password for the virtual machine."
      },
      "osPlatform": "Linux"
    }],
    "steps": [{
      "name": "infrastructureConfig",
      "label": "Configure Veeam HUB settings",
      "subLabel": {
        "preValidation": "Configure Veeam HUB settings",
        "postValidation": "Done"
      },
      "bladeTitle": "Veeam HUB settings",
      "elements": [{
        "name": "storageAccount",
        "type": "Microsoft.Storage.StorageAccountSelector",
        "label": "Storage account",
        "defaultValue": {
          "type": "Standard_LRS"
        }
      }, {
        "name": "vmSize",
        "type": "Microsoft.Compute.SizeSelector",
        "label": "Virtual machine size",
        "toolTip": "The size of the virtual machine for the domain controller.",
        "recommendedSizes": [
          "Standard_A0",
          "Standard_A1",
          "Standard_A2"
        ],
        "constraints": {
          "allowedSizes": [
          "Standard_A0",
          "Standard_A1",
          "Standard_A2"
          ]
        },
       "osPlatform": "Linux",
       "imageReference": {
         "publisher": "Canonical",
         "offer": "UbuntuServer",
         "sku": "14.04.2-LTS"
        }
      }, {
        "name": "VirtualNetwork",
        "type": "Microsoft.Network.VirtualNetworkCombo",
        "label": "Virtual Network",
        "toolTip": "Virtual Network VM should be connected to.",
        "options": {
          "hideNone": true
        }
        },{
        "name": "dnsAndPublicIP",
        "type": "Microsoft.Network.PublicIpAddressCombo",
        "label": {
          "publicIpAddress": "Public IP address",
          "domainNameLabel": "DNS Prefix"
        },
        "toolTip": {
          "domainNameLabel": "DNS Prefix for the VM public IP address."
        },
        "defaultValue": {
          "publicIpAddressName": "publicIP"
        },
        "options": {
          "hideNone": true
        }
      }]
    }],
    "outputs": {
      "location": "[location()]",
      "vmName":  "[basics('vmName')]",  
      "adminUsername": "[basics('adminUsername')]",
      "adminPassword": "[basics('adminPassword')]",
      "storageAccountNewOrExisting": "[steps('infrastructureConfig').storageAccount.newOrExisting]",
      "StorageAccountName": "[steps('infrastructureConfig').storageAccount.name]",
      "storageAccountType": "[steps('infrastructureConfig').storageAccount.type]",
      "storageAccountExistingRG": "[steps('infrastructureConfig').storageAccount.resourceGroup]",
      "vNetNewOrExisting": "[steps('infrastructureConfig').VirtualNetwork.newOrExisting]",
      "vNetName": "[steps('infrastructureConfig').VirtualNetwork.name]",
      "vNetAddressPrefix": "[steps('infrastructureConfig').VirtualNetwork.AddressPrefix]",
      "vmSize": "[steps('infrastructureConfig').vmSize]",
      "publicIPAddressName": "[steps('infrastructureConfig').DnsAndPublicIP.name]",
      "PublicIPDnsname": "[steps('infrastructureConfig').dnsAndPublicIP.domainNameLabel]",
      "publicIPExistingRGName": "[steps('infrastructureConfig').dnsAndPublicIP.resourceGroup]",
      "publicIPNewOrExisting": "[steps('infrastructureConfig').dnsAndPublicIP.newOrExistingOrNone]"
    }
  }
}
